{
  "root": true,
  "env": {
    "es2023": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": false
  },
  "plugins": [
    "@typescript-eslint",
    "import",
    "react",
    "react-hooks",
    "jsx-a11y",
    "boundaries"
  ],
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": [
          "./tsconfig.json"
        ]
      }
    },
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "import/order": "off",
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off",
    "no-use-before-define": "off",
    "no-shadow": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
      "files": [
        "src/features/**/route.ts"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              "**/adapters/**"
            ]
          }
        ]
      }
    },
    {
      "files": [
        "src/features/**/controller.ts",
        "src/features/**/usecase.ts",
        "src/features/**/exec/main.ts",
        "src/features/**/route.ts"
      ],
      "rules": {
        "max-lines": [
          "error",
          {
            "max": 100,
            "skipBlankLines": true,
            "skipComments": true
          }
        ]
      }
    },
    {
      "files": [
        "src/features/**/*"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              "@features/*"
            ]
          }
        ]
      }
    }
  ]
}

