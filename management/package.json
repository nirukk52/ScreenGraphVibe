{
  "name": "@screengraph/management",
  "version": "1.0.0",
  "description": "Operational management tools for ScreenGraph infrastructure",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch graphiti-management/src/cli.ts",
    "issue:plan": "tsx management/issue-brancher/src/cli.ts plan",
    "issue:commands": "tsx management/issue-brancher/src/cli.ts commands",
    "monitor": "tsx graphiti-management/src/cli.ts monitor",
    "status": "tsx graphiti-management/src/cli.ts status",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "management",
    "graphiti",
    "monitoring",
    "screengraph"
  ],
  "author": "ScreenGraph Team",
  "license": "MIT"
}

