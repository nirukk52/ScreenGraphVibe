#!/bin/sh
HUSKY_SH="$(dirname -- "$0")/_/husky.sh"
[ -f "$HUSKY_SH" ] && . "$HUSKY_SH"

echo "ðŸ”„ Updating document index before push..."
if [ -d "docs" ]; then
  ( cd docs && [ -d node_modules ] || npm install )
  ( cd docs && npm run update )
  [ -f docs/DOCUMENT_INDEX.md ] && git add docs/DOCUMENT_INDEX.md && echo "ðŸ“„ Added updated document index to commit"
else
  echo "âš ï¸ Docs module not found, skipping document index update"
fi

[ -f scripts/ci/update-project-status.sh ] && bash scripts/ci/update-project-status.sh || echo "âš ï¸ Project status update skipped"
[ -f scripts/docs/update-knowledge-graph.sh ] && bash scripts/docs/update-knowledge-graph.sh || echo "âš ï¸ Knowledge graph prep skipped"

# Print push summary (does not rewrite commits)
UPSTREAM_REF="${UPSTREAM_REF:-origin/main}"
BASE=$(git merge-base "$UPSTREAM_REF" HEAD 2>/dev/null || echo "")
if [ -n "$BASE" ]; then
  echo "\nðŸ§¾ Push Summary (since $UPSTREAM_REF):"
  git log --pretty='- %s' "$BASE"..HEAD || true
  echo "\nðŸ“Š Diff Stat:"
  git diff --stat "$BASE"..HEAD || true
fi

echo "âœ… Pre-push hook completed"

