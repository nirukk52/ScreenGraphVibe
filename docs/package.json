{
  "name": "@screengraph/docs",
  "version": "1.0.0",
  "description": "Documentation index and management system for ScreenGraph",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "scan": "tsx src/scan.ts",
    "index": "tsx src/index.ts",
    "update": "tsx src/update.ts",
    "setup-hooks": "tsx src/setup-hooks.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.2",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "documentation",
    "index",
    "markdown",
    "screengraph"
  ],
  "author": "ScreenGraph Team",
  "license": "MIT"
}
